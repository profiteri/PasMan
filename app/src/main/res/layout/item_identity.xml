<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:background="@drawable/profile_item_bg">
    <!--android:orientation="vertical"
    app:cardMaxElevation="12dp"
    android:divider="@drawable/divider_10dp"
    android:showDividers="middle"
    android:background="@drawable/profile_layout"-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblue"/>
    <ImageView

        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/account"
        android:id="@+id/iv_notes"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_gravity="start|top"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_title_item_identity"
        android:gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_marginTop="38dp"
        android:id="@+id/tv_email_item_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="55dp"

        />

    <!-- <TextView
         app:layout_constraintTop_toBottomOf="@+id/tvLogin"
         android:id="@+id/tvInfo"
